<div class="page-header">
  <h1>Edit Medicaid #<%= @medicaid.id %></h1>
</div>

<% if @medicaid.errors.any? %>
  <% @medicaid.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_medicaid/<%= @medicaid.id %>" class="form-horizontal">
  <!-- Label and input for medicaid_household_size -->
  <div class="form-group">
    <label for="medicaid_household_size" class="col-sm-2 control-label">
      Medicaid household size
    </label>
    <div class="col-sm-10">
      <input type="text" id="medicaid_household_size" name="medicaid_household_size" placeholder="Medicaid household size" class="form-control" value="<%= @medicaid.medicaid_household_size %>">
    </div>
  </div>

  <!-- Label and input for medicaid_gross_income -->
  <div class="form-group">
    <label for="medicaid_gross_income" class="col-sm-2 control-label">
      Medicaid gross income
    </label>
    <div class="col-sm-10">
      <input type="text" id="medicaid_gross_income" name="medicaid_gross_income" placeholder="Medicaid gross income" class="form-control" value="<%= @medicaid.medicaid_gross_income %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Medicaid" class="btn btn-primary">
    </div>
  </div>
</form>
