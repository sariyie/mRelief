<div class="page-header">
  <h1>Edit Medicare Cost Sharing #<%= @medicare_cost_sharing.id %></h1>
</div>

<% if @medicare_cost_sharing.errors.any? %>
  <% @medicare_cost_sharing.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_medicare_cost_sharing/<%= @medicare_cost_sharing.id %>" class="form-horizontal">
  <!-- Label and input for household_size -->
  <div class="form-group">
    <label for="household_size" class="col-sm-2 control-label">
      Household size
    </label>
    <div class="col-sm-10">
      <input type="text" id="household_size" name="household_size" placeholder="Household size" class="form-control" value="<%= @medicare_cost_sharing.household_size %>">
    </div>
  </div>

  <!-- Label and input for medicare_cost_sharing -->
  <div class="form-group">
    <label for="medicare_cost_sharing" class="col-sm-2 control-label">
      Medicare cost sharing
    </label>
    <div class="col-sm-10">
      <input type="text" id="medicare_cost_sharing" name="medicare_cost_sharing" placeholder="Medicare cost sharing" class="form-control" value="<%= @medicare_cost_sharing.medicare_cost_sharing %>">
    </div>
  </div>

  <!-- Label and input for premium_only -->
  <div class="form-group">
    <label for="premium_only" class="col-sm-2 control-label">
      Premium only
    </label>
    <div class="col-sm-10">
      <input type="text" id="premium_only" name="premium_only" placeholder="Premium only" class="form-control" value="<%= @medicare_cost_sharing.premium_only %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Medicare Cost Sharing" class="btn btn-primary">
    </div>
  </div>
</form>
